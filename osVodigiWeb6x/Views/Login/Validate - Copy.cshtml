@{
    ViewBag.Title = "Validate";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
        $("#adminlinklogoff").hide();
    }); 
</script>
<br /><br />
<div class="textblock">
    <span class="paragraphheader">Giriş</span><br />
    <span class="paragraphtext">Bu siteye erişmek için kullanıcı adınızı ve şifrenizi giriniz.
    <br /><br />
    <b>Note:</b> Bu site en iyi 9 veya üstü Microsoft Internet Explorer ile görüntülenir.
    </span>
</div>
<br /><br /><br /><br />
@using (Html.BeginForm()) {
    <table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
        <tr>
            <td class="formheader" colspan="2">Login</td>
        </tr>
        <tr>
            <td class="formprimary"><b>Kullanıcı Adı: </b></td>
            <td class="formprimary">
                @Html.TextBox("txtUsername", (string)ViewData["Username"], new { @style = "width:300px;", maxlength = 20 })
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Şifre: </b></td>
            <td class="formsecondary">
                @Html.Password("txtPassword", (string)ViewData["Password"], new { @style = "width:300px;", maxlength = 20 })
            </td>
        </tr>
        <tr>
            <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Giriş" style="width:75px;" /></div></td>
        </tr>
    </table>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
}
<br /><br />
<table style="margin-left:auto;margin-right:auto;border-spacing:0;border-collapse:collapse;" >
    <tr>
        <td style="text-align:left;">@Html.Raw((string)ViewData["SystemMessages"])</td>
    </tr>
</table>
<br /><br />
<table style="width:600px;margin-left:auto;margin-right:auto;border-spacing:0;border-collapse:collapse;" >
    <tr>
        <td style="text-align:center;padding:5px 5px 5px 5px;">@Html.Raw((string)ViewData["FreeLinks"])</td>
    </tr>
</table>
<br /><br />
<br /><br />
