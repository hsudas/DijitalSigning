@model osVodigiWeb6x.Models.Music

@{
    ViewBag.Title = "Upload";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
        $("#divProgressBar").hide();
    });
    function SaveClick() {
        $("#divProgressBar").show();
        $("#btnSave").enabled = false;
    }
</script>

<section class="content-header">
    <h1>
        <img src="~/Images/music-icon.png" alt="" style="border-radius:8px 8px;width:50px" />
        Müzik Ekleme
        @*<small>Digital signing yapılacak makine grubu ekleme</small>*@
    </h1>
    <ol class="breadcrumb">
        @*<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Simple</li>*@
    </ol>
</section>
@using (Html.BeginForm("Upload", "Music", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
     <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        @*<h3 class="box-title">Quick Example</h3>*@
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                @*<label for="exampleInputFile">Resim Yükle</label><span>*</span>
                                    <input type="file" id="exampleInputFile">*@
                                <label>Müzik Seç</label><span>*</span>
                                <input type="file" name="fileupload" id="fileupload" />
                            </div>
                            <div class="form-group">
                                <label>Müzik Adı</label><span>*</span>
                                @Html.TextBoxFor(model => model.MusicName, new { @style = "width:300px;", maxlength = 128, @class = "form-control" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.EditorFor(model => model.IsActive) Aktif
                                </label>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <input id="btnSave" type="submit" value="Kaydet" style="width:75px;" onclick="SaveClick();" />
                        </div>
                    </form>
                </div><!-- /.box -->
            </div>
        </div>
    </section>
    <div class="formfootnote"><span class="required">*</span> zorunlu alan.</div>
    <br />
    <div class="formfootnote" id="divProgressBar">
        <img src="~/Images/progress-bar.gif" alt="Please wait. Uploading file." /><br />
        Please wait. Uploading file.
    </div>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
}

