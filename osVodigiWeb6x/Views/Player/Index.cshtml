                            @*<input type="text" name="table_search" class="form-control input-sm pull-right" style="width: 150px;" placeholder="Search" />
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                                </div>*@
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        @using (Html.BeginForm("Index", "Player", FormMethod.Post, new { id = "formSearch" }))
                        {
                            <tr>
                                <th>Aktif</th>
                                <th>Player</th>
                                <th>Player Grup</th>
                                <th>Lokasyon</th>
                                <th></th>
                                <th></th>
                            </tr>

                            if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PlayerName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PlayerGroupName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PlayerLocation)</td>
                                        <td>@Html.ActionLink("Düzenle", "Edit", new { id = item.PlayerID }, new { @class = "label label-success" })</td>
                                        <td>@Html.ActionLink("Configure", "Configure", new { id = item.PlayerID }, new { @class = "label label-success" })</td>
