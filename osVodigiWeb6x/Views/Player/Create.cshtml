@model osVodigiWeb6x.Models.Player

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    });
</script>

<section class="content-header">
    <h1>
        <img src="~/Images/player-icon.png" alt="" style="border-radius:8px 8px;width:50px" />
        Player Ekleme
        <small>Digital signing yapılacak makine ekleme</small>
    </h1>
    <ol class="breadcrumb">
        @*<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Simple</li>*@
    </ol>
</section>

@using (Html.BeginForm())
{
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        @*<h3 class="box-title">Quick Example</h3>*@
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Player Grup</label><span>*</span>
                                @Html.DropDownList("lstPlayerGroup", (SelectList)ViewData["PlayerGroupList"], new { @style = "width:300px;", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Player</label><span>*</span>
                                @Html.TextBoxFor(model => model.PlayerName, new { @style = "width:300px;", maxlength = 128, @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Lokasyon</label>
                                @Html.TextBoxFor(model => model.PlayerLocation, new { @style = "width:300px;", maxlength = 128, @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Açıklama</label>
                                @Html.TextBoxFor(model => model.PlayerDescription, new { @style = "width:300px;", maxlength = 1024, @class = "form-control" })
                            </div>
                            <div class="checkbox">
                                <label>
                                    @Html.EditorFor(model => model.IsActive) Aktif
                                </label>
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <input type="submit" class="btn btn-primary" value="Kaydet" style="width:75px;" />
                        </div>
                    </form>
                </div><!-- /.box -->
            </div>
        </div>
    </section>

    <div class="formfootnote"><span class="required">*</span> zorunlu alan.</div>

    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
}
