@model osVodigiWeb6x.Models.PlayerGroupSchedule

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    });
</script>

<section class="content-header">
    <h1>
        <img src="~/Images/playergroup-icon.png" alt="" style="border-radius:8px 8px;width:50px" />
        Player Grup Planla
        @*<small>Digital signing yapılacak makine grubu ekleme</small>*@
    </h1>
    <ol class="breadcrumb">
        @*<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Tables</a></li>
            <li class="active">Simple</li>*@
    </ol>
</section>

@using (Html.BeginForm())
{
     <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        @*<h3 class="box-title">Quick Example</h3>*@
                    </div><!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputFile">Player Grup</label>
                                <input type="text" class="form-control" placeholder="@Html.Raw((string)ViewData["PlayerGroupName"])" disabled />
                            </div>
                            <div class="form-group">
                                <label>Ekran</label><span>*</span>
                                @Html.DropDownList("lstScreen", (SelectList)ViewData["ScreenList"], new { @style = "width:300px;", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Günler</label><span>*</span>
                                <input type="checkbox" id="chkSunday" name="chkSunday" value="Sunday" />Pazar
                                <input type="checkbox" id="chkMonday" name="chkMonday" value="Monday" style="margin-left:8px;" />Ptesi
                                <input type="checkbox" id="chkTuesday" name="chkTuesday" value="Tuesday" style="margin-left:8px;" />Salı
                                <input type="checkbox" id="chkWednesday" name="chkWednesday" value="Wednesday" style="margin-left:8px;" />Çarşamba
                                <input type="checkbox" id="chkThursday" name="chkThursday" value="Thursday" style="margin-left:8px;" />Perşembe
                                <input type="checkbox" id="chkFriday" name="chkFriday" value="Friday" style="margin-left:8px;" />Cuma
                                <input type="checkbox" id="chkSaturday" name="chkSaturday" value="Saturday" style="margin-left:8px;" />Cumartesi

                            </div>
                            <div class="form-group">
                                <label>Saat/Dakika</label><span>*</span>
                                @Html.DropDownList("lstHour", (SelectList)ViewData["HourList"], new { @style = "width:50px;" })
                                @Html.DropDownList("lstMinute", (SelectList)ViewData["MinuteList"], new { @style = "width:50px;" })
                            </div>

                            <!-- time Picker -->
                            <div class="bootstrap-timepicker">
                                <div class="form-group">
                                    <label>Time picker:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control timepicker" />
                                        <div class="input-group-addon">
                                            <i class="fa fa-clock-o"></i>
                                        </div>
                                    </div><!-- /.input group -->
                                </div><!-- /.form group -->
                            </div>
                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            <input type="submit" class="btn btn-primary" value="Kaydet" />
                        </div>
                    </form>
                </div><!-- /.box -->
            </div>
        </div>
    </section>



    <div class="formfootnote"><span class="required">*</span> zorunlu alan.</div>
    @Html.Hidden("txtPlayerGroupID", ViewData["PlayerGroupID"])
}

<br />
<span class="paragraphheader" style="margin-left:30px;">Current Player Group Schedule</span><br />
@Html.Raw((string)ViewData["ScheduleHTML"])<br /><br />
<br /><br />